{% extends "main.twig" %}

{% block title %}Créer un utilisateur admin{% endblock %}

{% block content %}
    <h2>Créer un utilisateur admin</h2>
    {% if error %}
        <div style="color: red;">{{ error }}</div>
    {% endif %}
    {% if success %}
        <div style="color: green;">{{ success }}</div>
    {% endif %}

    <form method="POST" action="{{ url_for('register') }}">
        {{ csrf_input() }}

        <div class="form-group">
            <label for="email">Email :</label>
            <input type="email" id="email" name="email" required 
                value="{{ submitted_data.email|e }}">
        </div>

        <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="password" required>
            <small>Doit contenir au moins 8 caractères et une majuscule.</small>
        </div>

        <div class="form-group">
            <label for="password_confirm">Confirmer le mot de passe :</label>
            <input type="password" id="password_confirm" name="password_confirm" required>
        </div>

        <button type="submit">Créer l'utilisateur</button>
    </form>
    <a href="{{ url_for('home') }}">Retour à l'accueil</a>
{% endblock %}