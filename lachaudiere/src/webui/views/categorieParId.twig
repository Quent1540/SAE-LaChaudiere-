{% extends "main.twig" %}

{% block title %}Détail Catégorie{% endblock %}

{% block content %}
    <h1>Détail de la catégorie</h1>
    <p><strong>ID :</strong> {{ categorie.id_categorie }}</p>
    <p><strong>Libellé :</strong> {{ categorie.libelle }}</p>
    <div>
        <strong>Description :</strong>
        <div style="border: 1px solid #ddd; padding: 10px; margin-top: 5px; border-radius: 5px;">
            {{ html_description|raw }}
        </div>
    </div>
    <br>
    <a href="{{ url_for('list_categories') }}" class="button-modern">Retour à la liste des catégories</a>
    <a href="{{ url_for('home') }}" class="button-modern">Retour à la page d'accueil</a>
{% endblock %}