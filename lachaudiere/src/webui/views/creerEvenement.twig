{% extends "main.twig" %}

{% block content %}
<h2>Créer un événement</h2>

<form method="post" enctype="multipart/form-data">
    {{ csrf_input() }}
    <div>
        <label for="titre">Titre de l'événement :</label>
        <input type="text" id="titre" name="titre" required>
    </div>

    <div>
        <label for="description">Description :</label>
        <textarea id="description" name="description" rows="5"></textarea>
    </div>

    <div>
        <label for="tarif">Tarif :</label>
        <input type="text" id="tarif" name="tarif">
    </div>

    <div>
        <label for="date_debut">Date de début :</label>
        <input type="datetime-local" id="date_debut" name="date_debut" required>
    </div>

    <div>
        <label for="date_fin">Date de fin :</label>
        <input type="datetime-local" id="date_fin" name="date_fin">
    </div>

    <div>
        <label for="categorie">Catégorie :</label>
        <select id="categorie" name="id_categorie" required>
            {% for categorie in categories %}
                <option value="{{ categorie.id_categorie }}">{{ categorie.libelle }}</option>
            {% endfor %}
        </select>
    </div>

    <div>
        <label for="image">Image principale :</label>
        <input type="file" id="image" name="image">
    </div>

    <div>
        <label for="legende">Légende de l'image :</label>
        <input type="text" id="legende" name="legende" value="Image principale">
    </div>

    <div>
        <label for="est_publie">Publié :</label>
        <input type="checkbox" id="est_publie" name="est_publie" value="1">
    </div>

    <button type="submit" class="button-modern">Créer</button>
</form>

{% endblock %}