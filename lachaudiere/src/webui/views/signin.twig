{% extends "main.twig" %}

{% block title %}Connexion - Administration{% endblock %}

{% block content %}
    {% if error %}
        <p style="color: red;">{{ error }}</p>
    {% endif %}
    <h2>Connexion Administration</h2>

    {% if session.auth_message %}
        <div class="alert alert-warning">{{ session.auth_message }}</div>
    {% endif %}

    <form method="POST" action="{{ url_for('signin') }}">
        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

        <div>
            <label for="email">Email :</label>
            <input type="email" id="email" name="email" value="{{ submitted_email | default('') }}" required autofocus>
        </div>

        <div>
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="password" required>
        </div>

        <div>
            <button type="submit">Se connecter</button>
        </div>
    </form>
{% endblock %}
